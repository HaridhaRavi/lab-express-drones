<a href="/drones/create ">Create a new Drone</a>
<h2>Available drones</h2>
{{#each drones}}
  <section class="drone">
    <h3>{{this.name}}</h3>
    <p>
      Propellers :
      {{this.propellers}}
      <br />
      Max-Speed :
      {{this.maxSpeed}}
      <br />
    </p>
  </section>
  <section id="list-buttons">
    <a href="/drones/{{_id}}/edit">Edit Drone</a>

    <form action="/drones/{{_id}}/delete" method="POST">
      <button type="submit">Delete</button>
    </form>
  </section>
{{/each}}